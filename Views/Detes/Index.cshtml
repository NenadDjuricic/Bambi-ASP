@model IEnumerable<TestDataBase.Dete>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Spisak dece</h2>
<div class="col-lg-10 col-lg-offset-5">
    <p>
        @Html.ActionLink("Dodaj dete", "Create", new { @class = "" })

    </p>
</div>
@using (Html.BeginForm("Index", "Detes", FormMethod.Get))
{
    <label>Filter by category:</label> @Html.DropDownList("VaspitnaGrupa", "Sve")
    <input type="submit" value="Filter" />
    <input type="hidden" name="Search" id="Search" value="@ViewBag.Search" />
}
@using (Html.BeginForm("Index", "Detes", FormMethod.Get, new
{
    @class = "navbar-form navbar-right"
}))
{
    <div class="form-group">
        @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Pretraga" })
    </div>
    <button type="submit" class="btn btn-default">Pretrazi</button>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Domacinstvo.Adresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VaspitnaGrupa.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatumRodjenja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JMBG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImeRoditelja)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Domacinstvo.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaspitnaGrupa.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumRodjenja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JMBG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImeRoditelja)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DeteID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DeteID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DeteID })
            </td>
        </tr>
    }

</table>
