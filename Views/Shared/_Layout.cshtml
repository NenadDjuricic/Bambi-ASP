<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/styles.css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="container-fluid site-header pb-4">
        <div class="row justify-content-between">
            <div class="col-8 offset-1 col-lg-4  col-lg-offset-1">
                <img src="~/slike/logo-bambi.png" class="img-responsive mx-auto d-block">
            </div>
            <div class="col-12 col-lg-4">
                <nav class="socials text-right text-md-center pt-3">
                    <ul>
                        <li><a href="http://facebook.com"><span class="sr-only">Facebook</span></a></li>
                        <li><a href="http://instagram.com"><span class="sr-only">Instagram</span></a></li>
                        <li><a href="http://twitter.com"><span class="sr-only">Twitter</span></a>
                        <li> <a href="http://youtube.com"><span class="sr-only">YouTube</span></a></li>
                    </ul>
                </nav>

            </div>
        </div>
    </header>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Restoran GoodFood", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse col-lg-12">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Pocetna", "Index", "Home")</li>
                    <li>@Html.ActionLink("Kategorija", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Proizvodi", "Index", "Products")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
